@using OkulMvc.Models.EntityFramework;
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KULÜPLER</h2>
<table class="table table-borderless">
    <tr>
        <th>Kulüp ID</th>
        <th>Kulüp Adı</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>  
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.KULUPID</td>
                <td>@k.KULUPAD</td>
                <td><a href="/Kulupler/Sil/@k.KULUPID" class="btn btn-danger">Sil</a>
                <a href="/Kulupler/KulupGetir/@k.KULUPID" class="btn btn-success">Güncelle</a></td>  
            </tr>
        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulüpEkle" class="btn btn-primary">Yeni Kulüp Kaydı Ekle</a>

